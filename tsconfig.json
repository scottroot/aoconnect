{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
//    "outDir": "./dist",
//    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
//    "paths": {
//      "*": ["src/*"]
//    }
  },
  "include": [
    "src/**/*.ts",
    "src/global.d.ts"
  ],
  "exclude": ["node_modules", "dist", "archive"]
}
